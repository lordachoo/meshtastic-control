      "cooldownSeconds": 300
    },
    {
      "id": "hi",
      "enabled": true,
      "trigger": "hi",
      "triggerType": "exact",
      "response": "received: {sender_short} ({sender_name} / {sender_id})",
      "messageType": "both",
      "cooldownSeconds": 300
    },
    {
      "id": "testing",
      "enabled": true,
      "trigger": "testing",
